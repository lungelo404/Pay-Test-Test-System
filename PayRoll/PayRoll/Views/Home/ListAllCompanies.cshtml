@Html.ValidationSummary()
@using PagedList.Mvc
@model PagedList.IPagedList<PayRoll.Models.Company>

@{
    ViewBag.Title = "ListAllCompanies";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}




<div class="row"style="margin-top :4px"> 
    <h2>All Companies</h2>
    <table class="table">
        <tr>
            <th>
                @Html.Label("Name")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "CompanyDetails", new { id = item.ID })
                </td>
           
            </tr>
        }

    </table>
</div>


<div id="container" style="margin-left: 20px">
    <p></p>
    <p></p>
    <div class="pagination" style="margin-left: 400px">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("ListSouthAfricanEmployees", new { page }))
    </div>
</div>

@Html.ActionLink("Back to List", "Index")
